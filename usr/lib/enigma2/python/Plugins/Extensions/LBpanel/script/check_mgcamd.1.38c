#!/bin/sh
 echo " ----- script de control para emu mgcamd.1.38c -----" 

  while [ 1 ] ; do
  pidof mgcamd.1.38c >/dev/null
  if [ $? -eq 0 ] ; then
    echo " OK"
  else
    DATE=$(date) 
    echo "Restarting mgcamd.1.38c : " >> /tmp/check_mgcamd.1.38c.log
    /usr/CamEmu/camemu.mgcamd.1.38c restart
 fi

 sleep 60
 done
